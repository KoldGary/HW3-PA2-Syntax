# Lexical specification
skip WS '\s+'
token COMMENT '#.*'
token SKIP 'skip'
token TOKEN 'token'
token ID '[A-Z][A-Z0-9_]*'
token PATTERN '".*?"'

%
# Syntactic specification
<spec> ::= <line> <spec>
         | 

<line> ::= COMMENT
         | <skip-rule>
         | <token-rule>

<skip-rule> ::= SKIP PATTERN

<token-rule> ::= TOKEN ID PATTERN
               | ID PATTERN
